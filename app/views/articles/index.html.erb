<p style="color: green"><%= notice %></p>

<h1>Articles</h1>
<%= will_paginate @articles%>
<div id="articles">
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan=3>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.user.username %></td>
        <td><%= link_to "Show this article", article %></td>
        <td><%= link_to "Edit this article", edit_article_path(article) %></td>
        <td><%= link_to "Destroy this article", article, data: {
          "turbo-method": :delete,
          turbo_confirm: "Are you suere?"
        } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<p>
  <%= link_to "New article", new_article_path %>
</p>
