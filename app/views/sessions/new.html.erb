<h1>Login</h1>

<%= form_with(scope: :session, url: login_path) do |form| %>
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
